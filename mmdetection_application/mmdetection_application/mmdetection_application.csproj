    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="logo-no-background.png" />
    <None Remove="mmrun-logo-only.png" />
    <None Remove="Views\logo-no-background.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MahApps.Metro.IconPacks.Material" Version="4.11.0" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="logo-no-background.png" />
    <Resource Include="mmrun-logo-only.png" />
    <Resource Include="Views\logo-no-background.png" />
  </ItemGroup>

</Project>
